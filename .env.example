# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=military_classification
DB_USER=postgres
DB_PASSWORD=your_password_here

# LLM Configuration (choose one)
# For OpenAI (requires internet initially to download, then can work offline with cached model)
OPENAI_API_KEY=sk-your-key-here
LLM_PROVIDER=openai
LLM_MODEL=gpt-4

# For local LLM with Ollama (fully offline after model download)
# LLM_PROVIDER=local
# LLM_MODEL=gemma3:12b

# Hugging face embedding model (downloads once, then works offline)
# EMBEDDING_MODEL=all-MiniLM-L6-v2
# EMBEDDING_DIMENSION=384

# Embedding Model Open AI
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Classification Settings
CONFIDENCE_THRESHOLD=0.7
TOP_K_RETRIEVAL=5
